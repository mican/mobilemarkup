    <div class={styles.actions}>
      <a href="/contact" class={styles.button}>Get in touch</a>
      <a class={styles.buttonOutlined} href="https://calendly.com/mican/30min" target="_blank" rel="noreferrer noopener nofollow" > 
        Schedule a call
      </a>
    </div>
  </div>
</section>